#include <iostream>
using namespace std;

class TIME {
private:
    int hrs;
    int mins;

public:
    // Default constructor
    TIME() : hrs(0), mins(0) {}

    // Parameterized constructor
    TIME(int h, int m) : hrs(h), mins(m) {
        // Normalize time in case minutes are more than 59 or hours are more than 23
        if (mins >= 60) {
            hrs += mins / 60;
            mins %= 60;
        }
        if (hrs >= 24) {
            hrs %= 24;
        }
    }

    // Copy constructor
    TIME(const TIME &t) : hrs(t.hrs), mins(t.mins) {}

    // Function to add two TIME objects
    TIME sum(const TIME &t) const {
        int totalMins = (hrs * 60 + mins) + (t.hrs * 60 + t.mins);
        int h = totalMins / 60 % 24;
        int m = totalMins % 60;
        return TIME(h, m);
    }

    // Function to display time
    void display() const {
        cout << (hrs < 10 ? "0" : "") << hrs << ":"
             << (mins < 10 ? "0" : "") << mins << endl;
    }
};

int main() {
    TIME t1(10, 45);     // 10:45
    TIME t2(2, 30);      // 02:30

    // Display original times
    cout << "Time 1: ";
    t1.display();
    cout << "Time 2: ";
    t2.display();

    // Sum of times
    TIME t3 = t1.sum(t2);
    cout << "Sum of Time 1 and Time 2: ";
    t3.display();

    return 0;
}
